# ============================================
# Flask Application Configuration
# ============================================
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=production
FLASK_DEBUG=false
APP_URL=https://your-app.koyeb.app

# ============================================
# Supabase Database Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# For local development (SQLite fallback)
# Set to "true" to use local SQLite instead of Supabase
USE_LOCAL_DB=false

# ============================================
# Telegram Bot Configuration
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_ID=123456789

# Telegram Login Widget (get from @BotFather)
TELEGRAM_BOT_USERNAME=your_bot_username

# ============================================
# Email Configuration (for email auth)
# ============================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ============================================
# API Keys for Chinese Learning Features
# ============================================
# DeepSeek API (for AI-generated example sentences)
DEEPSEEK_API_KEY=your-deepseek-api-key

# Unsplash API (for card images)
UNSPLASH_API_KEY=your-unsplash-access-key

# Google Cloud Vision API (for OCR)
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# ============================================
# Optional: External TTS API (self-hosted or external)
# Leave empty to use gTTS locally
TTS_API_URL=

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-secure-password

# ============================================
# Koyeb Deployment (automatically set by Koyeb)
# ============================================
# PORT=8000
